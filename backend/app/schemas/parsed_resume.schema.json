{
  "$id": "https://example.com/schemas/parsed_resume.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parsed Resume",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "resume_id", "experience", "skills_raw"],
  "properties": {
    "schema_version": { "type": "string", "const": "0.1.0" },
    "resume_id": { "type": "string" },
    "summary": { "type": ["string", "null"], "maxLength": 1000 },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "company", "start_date"],
        "properties": {
          "title": { "type": "string", "maxLength": 120 },
          "company": { "type": "string", "maxLength": 120 },
          "location": { "type": ["string", "null"] },
          "start_date": { "type": "string" },
          "end_date": { "type": ["string", "null"] },
          "is_current": { "type": "boolean", "default": false },
          "bullets": {
            "type": "array",
            "items": { "type": "string", "maxLength": 300 }
          }
        }
      }
    },
    "education": { "type": "array" },
    "skills_raw": { "type": "array", "items": { "type": "string" }, "uniqueItems": false },
    "languages": { "type": "array" }
  }
}
